{
	"name": "html-boilerplate",
	"version": "1.0.0",
	"description": "A simple HTML boilerplate to get your website project started in seconds.",
	"homepage": "https://github.com/badasswp/html-boilerplate",
	"type": "module",
	"keywords": [
		"html",
		"boilerplate",
		"starter",
		"template",
		"project"
	],
	"scripts": {
		"dev": "vite --force",
		"watch": "gulp watch",
		"compile:css": "gulp css",
		"compile:js": "gulp js",
		"build": "yarn compile:css && yarn compile:js",
		"prettier": "prettier --write ./**/*.{js,json,md,mjs,html}",
		"format": "NODE_OPTIONS='--no-warnings' eslint . --ext .js,.mjs,.jsx,.ts,.tsx --fix"
	},
	"devDependencies": {
		"@babel/core": "^7.26.10",
		"@babel/preset-env": "^7.26.9",
		"babelify": "^10.0.0",
		"browserify": "^17.0.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"gulp": "^5.0.0",
		"gulp-babel": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-sass": "^6.0.1",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uglify-es": "^3.0.0",
		"gulp-watch": "^5.0.1",
		"prettier": "^3.5.3",
		"sass": "^1.85.1",
		"vinyl-buffer": "^1.0.1",
		"vinyl-source-stream": "^2.0.0",
		"vite": "^6.2.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badasswp/html-boilerplate.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/badasswp/html-boilerplate/issues"
	}
}
